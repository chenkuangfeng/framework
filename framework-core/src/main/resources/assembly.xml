<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>bin</id>
	<formats>
		<format>tar.gz</format>		
	</formats>
	<dependencySets>
		<dependencySet>
		 
		<useProjectArtifact>false</useProjectArtifact>			
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>com.framework:framework-core</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>deploy</outputDirectory>
			<includes>
				<include>com.framework:framework-core</include>
				<include>com.framework:framework-rpc</include>
				
			</includes>
		</dependencySet> 
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>src/main/resources/bin</directory>
			<outputDirectory>/bin</outputDirectory>

		</fileSet>
		<fileSet>
			<directory>src/main/resources/conf</directory>
			<outputDirectory>/conf</outputDirectory>

		</fileSet>
		<fileSet>
			<directory>src/main/resources/fdm</directory>
			<outputDirectory>/fdm</outputDirectory>

		</fileSet>
		
	</fileSets>
	</assembly>